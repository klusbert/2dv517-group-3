  scrape_interval:      15s
  evaluation_interval:  15s

  external_labels:
    monitor: 'project-monitor'

scrape_configs:
  - job_name: 'wordpress'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.199.10:9100', '192.168.199.13:9100', '192.168.199.14:9100']

  - job_name: 'db master'
    static_configs:
      - targets: ['192.168.199.8:9100']

  - job_name: 'db slave'
    static_configs:
      - targets: ['192.168.199.17:9100']

  - job_name: 'load balancer'
    static_configs:
      - targets: ['192.168.199.15:9100']

  - job_name: 'file server'
    static_configs:
      - targets: ['192.168.199.9:9100']

