---
- hosts: database
  become: true
  tasks:
    - name: Install ansible mysql dependency
      apt:
        name: python3-mysqldb
        state: latest
    - name: install mqsql server
      action: apt pkg=mysql-server state=present
    - name: install mqsql client
      action: apt pkg=mysql-client state=present
    - name: copy global mysqld.cnf
      template:
        src: ./exports/mysqld.cnf.j2
        dest: /etc/mysql/mysql.conf.d/mysqld.cnf
    - name: Restart mysql
      service:
        name: mysql
        state: restarted
    - name: Remove anon user
      community.mysql.mysql_user:
        name: ''
        host: 'localhost'
        state: absent
    - name: Create admin user
      community.mysql.mysql_user:
        name: admin
        password: test
        priv: '*.*:ALL'
        state: present
    - name: Create replica user
      community.mysql.mysql_user:
        name: replica
        password: test
        priv: '*.*:ALL'
        state: present
      when: mysql_role == "master"

    - name: Copy dump file
      copy:
        src: ../assets/database/backup.sql
        dest: /tmp
      when: mysql_role == "master"
    - name: Restore database ignoring errors
      community.mysql.mysql_db:
        name: wordpress
        state: import
        target: /tmp/backup.sql
      when: mysql_role == "master"

    - name: stop slave
      community.mysql.mysql_replication:
        mode: stopslave

    - name: Change primary
      community.mysql.mysql_replication:
        mode: changemaster
        master_host: "{{db_master_ip}}"
        master_user: "replica"
        master_password: "test"
        master_auto_position: yes
        login_user: "admin"
        login_password: "test"
      when : mysql_role == "slave"
    - name: start slave
      community.mysql.mysql_replication:
        mode: startslave
        login_user: "admin"
        login_password: "test"
      when: mysql_role == "slave"