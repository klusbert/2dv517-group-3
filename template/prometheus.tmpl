global:
  scrape_interval:      15s
  evaluation_interval:  15s

  external_labels:
    monitor: 'project-monitor'

scrape_configs:
  - job_name: 'wordpress'
    scrape_interval: 5s
    static_configs:
      - targets: ['${word_press_1}:9100', '${word_press_2}:9100', '${word_press_3}:9100']

  - job_name: 'db master'
    static_configs:
      - targets: ['${db_master}:9100']

  - job_name: 'db slave'
    static_configs:
      - targets: ['${db_slave}:9100']

  - job_name: 'load balancer'
    static_configs:
      - targets: ['${load_balancer}:9100']

  - job_name: 'file server'
    static_configs:
      - targets: ['${fileserver}:9100']

